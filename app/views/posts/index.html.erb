<h1>Home</h1>
<div class="container">
    <div class="row">
        <div class="col-sm-5">
            <%= render 'layouts/new' %>
        </div>
        <div class="col-sm-7">
            <% @posts.each do |post| %>
                <div class="post" id="post-<%= post.id %>">
                    <%= render 'layouts/posts', post: post %>
                </div>
            <% end %>
        </div>
    </div>
</div>